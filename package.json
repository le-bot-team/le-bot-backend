{
  "name": "le-bot-backend",
  "version": "1.1.4",
  "scripts": {
    "format": "prettier --write \"./src*/**/*.{ts,js,cjs,mjs,json,md}\"",
    "lint": "eslint -c ./eslint.config.mjs \"./src*/**/*.{ts,js,cjs,mjs}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts | pino-pretty -c -t SYS:standard -S",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/index.ts",
    "docker-dev:up": "docker compose -f docker-compose.dev.yml up --build --force-recreate -d",
    "docker-dev:stop": "docker compose -f docker-compose.dev.yml down",
    "docker-dev:clear": "bun run docker-dev:stop && docker volume rm le-bot-backend_pgdata",
    "docker-dev:fresh": "bun run docker-dev:clear && bun run docker-dev:up"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.8",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/static": "^1.3.0",
    "@elysiajs/swagger": "^1.3.1",
    "@yolk-oss/elysia-env": "^3.0.0",
    "drizzle-orm": "^0.42.0",
    "drizzle-typebox": "^0.3.3",
    "elysia": "1.4.18",
    "nodemailer": "7.0.11",
    "pako": "^2.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.6.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pako": "^2.0.3",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.3.0",
    "jiti": "^2.4.2",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.36.0"
  },
  "module": "src/index.js"
}
