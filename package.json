{
  "name": "le-bot-backend",
  "version": "1.1.4",
  "type": "module",
  "module": "src/index.js",
  "scripts": {
    "format": "prettier --write \"./src*/**/*.{ts,js,cjs,mjs,json,md}\"",
    "format:check": "prettier --check \"./src*/**/*.{ts,js,cjs,mjs,json,md}\"",
    "lint": "eslint -c ./eslint.config.mjs \"./src*/**/*.{ts,js,cjs,mjs}\"",
    "lint:fix": "eslint -c ./eslint.config.mjs --fix \"./src*/**/*.{ts,js,cjs,mjs}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts | pino-pretty -c -t SYS:standard -S",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/index.ts",
    "docker-dev:create": "docker compose -f compose.dev.yaml up --build --force-recreate -d",
    "docker-dev:up": "docker compose -f compose.dev.yaml up -d",
    "docker-dev:stop": "docker compose -f compose.dev.yaml down",
    "docker-dev:remove": "docker compose -f compose.dev.yaml down -v",
    "docker-dev:recreate": "bun docker-dev:remove && bun docker-dev:create",
    "migration:generate": "bun --bun drizzle-kit generate --config ./drizzle.config.ts",
    "migration:check": "bun migration:generate && bun --bun drizzle-kit check --config ./drizzle.config.ts",
    "migration:push": "bun --bun drizzle-kit push --config ./drizzle.config.ts",
    "migration:pull": "bun --bun drizzle-kit pull --config ./drizzle.config.ts"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.14",
    "@elysiajs/static": "^1.4.7",
    "@yolk-oss/elysia-env": "^3.0.0",
    "axios": "^1.13.4",
    "drizzle-orm": "^0.45.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "1.4.22",
    "nodemailer": "7.0.13",
    "pako": "^2.1.0",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/nodemailer": "^7.0.9",
    "@types/pako": "^2.0.4",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.7",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.2.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  },
  "overrides": {
    "@sinclair/typebox": ">= 0.34.0 < 1"
  }
}
